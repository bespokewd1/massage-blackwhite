const phoneHref = `tel:${clientData.phoneForTel?.replace(/\s+/g, '') || '5879380458'}`;
const email = clientData.email || 'info@yourclinic.ca';
const bookingHref = '/booking'; // change to your actual booking link if different
const mapNote =
  'We offer in‑clinic massage services at Southgate Centre (Southgate Mall), Edmonton, Alberta. See our contact page for directions and parking details.';
---

<BaseLayout preloadedImage={optimizedImage}>
  <section class="bg-orange-50">
    <div class="mx-auto max-w-[120rem] px-6 py-16 md:py-20">
      <!-- Header -->
      <header class="text-center max-w-3xl mx-auto">
        <h1 class="font-serif text-3xl md:text-4xl text-gray-900">
          Our Services
        </h1>
        <p class="mt-4 text-gray-700 leading-7">
          We offer massage therapy for pain relief, stress reduction, and
          relaxation. Our licensed therapists specialize in deep‑tissue, hot
          stone, Swedish, cupping, and lymphatic‑focused treatments delivered
          in‑clinic. Experience attentive care designed to restore balance and
          well‑being.
        </p>
      </header>

      <!-- Cards -->
      <div
        class="mt-10 xl:px-16 grid grid-cols-[repeat(auto-fit,minmax(min(450px,100%),1fr))] gap-6 lg:gap-8"
      >
        {
          services.map((s) => (
            <article class="relative bg-transparent overflow-hidden grid grid-rows-[min-content,1fr] sm:grid-rows-1 sm:grid-cols-2 rounded-xl ring-1 ring-black/10 ">
              {/* <div class="absolute  inset-0 bg-gradient-to-l from-emerald-900 from-35% via-emerald-900/80 via-55% to-emerald-900/10" /> */}
              <div class="">
                <Picture
                  src={s.img}
                  alt={s.title}
                  formats={['avif', 'webp']}
                  class={'block w-full aspect-square size-full object-cover'}
                />
                {/* <div class="absolute inset-0 bg-gradient-to-l from-emerald-900 from-10% via-10% to-emerald-500/10" /> */}
              </div>

              <div class="p-5 bg-emerald-200 z-10 text-emerald-50 h-full place-content-center space-y-4 ">
                <h3 class="font-semibold text-shadow-md text-emerald-950 text-xl text-balance">
                  {s.title}
                </h3>
                <p class="text-sm/6 text-emerald-900 text-pretty">{s.blurb}</p>
                <div class="mt-4">
                  <a
                    href={s.href ?? '/services'}
                    class="inline-flex items-center rounded-full bg-orange-200 hover:bg-orange-100 transition-colors text-gray-900 px-4 py-2 text-sm font-semibold focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-300"
                  >
                    {s.cta ?? 'Learn More'}
                  </a>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--            Services Benefits                 -->
  <!-- ============================================ -->

  <section id="services-1666">
    <div class="cs-container">
      <div class="cs-image-group">
        <Picture
          pictureAttributes={{ class: 'cs-picture' }}
          src={benefitImg}
          formats={['avif', 'webp']}
          alt="benefit massage"
        />

        <!--SVG Graphic-->
        <img
          class="cs-floater"
          src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/white-swirl.svg"
          alt="graphic"
          loading="lazy"
          decoding="async"
          height="710"
          aria-hidden="true"
          width="690"
        />
      </div>
      <div class="cs-content">
        <span class="cs-topper">Service Benefits</span>
        <h2 class="cs-title">The Benefits of Massage Therapy</h2>
        <p class="cs-text">
          Discover how regular massage can relieve pain, reduce stress, and
          improve overall well-being.
        </p>
        <ul class="cs-faq-group">
          <!-- Therapeutic Massage ------------->
          <li class="cs-faq-item active">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> Therapeutic Massage </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              This customized massage helps relieve muscle tension, boost
              circulation, and reduce stress. It promotes overall relaxation and
              supports physical and emotional well-being.
            </p>
          </li>
          <!-- Deep Tissue Massage ------------->
          <li class="cs-faq-item">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> Deep Tissue Massage </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              Ideal for individuals experiencing chronic tension or
              post‑exercise soreness. Focused techniques reach deeper muscle
              layers to provide effective relief and improved mobility.
            </p>
          </li>
          <!-- Prenatal Massage ---------------->
          <li class="cs-faq-item">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> Prenatal Massage </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              Designed for expectant mothers, prenatal massage eases physical
              discomfort, reduces stress, and improves sleep. It can also help
              decrease swelling and promote circulation during pregnancy.
            </p>
          </li>
          <!-- Sports Massage ------------------>
          <li class="cs-faq-item">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> Sports Massage </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              Perfect for athletes and active individuals, sports massage
              enhances performance, prevents injuries, and supports quicker
              recovery. It also helps improve flexibility and reduce muscle
              soreness.
            </p>
          </li>
          <!-- Cupping Therapy ------------------>
          <li class="cs-faq-item">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> Cupping Therapy </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              A targeted technique using gentle negative pressure to lift
              fascia, improve tissue glide, and release tight areas. When paired
              with hands‑on work, it helps reduce tension and supports recovery.
            </p>
          </li>
          <!-- Hot Stone Massage ---------------->
          <li class="cs-faq-item">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> Hot Stone Massage </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              Heated basalt stones gently melt tension and enhance circulation,
              promoting relaxation with therapeutic depth for an overall sense
              of calm.
            </p>
          </li>
          <!-- Lymphatic Drainage Massage ------->
          <li class="cs-faq-item">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> Lymphatic Drainage Massage </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              This gentle technique stimulates the lymphatic system to help
              detoxify the body, reduce swelling, and improve immune function.
              It’s often used for post-surgery recovery or to manage lymphedema.
            </p>
          </li>
          <!-- TMJ Massage ---------------------->
          <li class="cs-faq-item">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> TMJ Massage </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              TMJ massage targets the jaw, neck, and head to relieve pain from
              temporomandibular joint dysfunction. It can reduce headaches, jaw
              tension, and improve jaw mobility.
            </p>
          </li>
          <!-- Japanese Head Spa ---------------->
          <li class="cs-faq-item">
            <button class="cs-button">
              <img
                class="cs-icon"
                aria-hidden="true"
                loading="lazy"
                decoding="async"
                src="data:image/svg+xml;base64,"
                alt="icon"
                width="32"
                height="32"
              />
              <span class="cs-button-text"> Japanese Head Spa </span>
              <span class="cs-indicator" aria-hidden="true"></span>
            </button>
            <p class="cs-item-p">
              A relaxing scalp treatment that boosts blood flow to the head and
              scalp, reducing stress and promoting mental clarity. It also
              supports healthier hair growth and relieves tension-related
              headaches.
            </p>
          </li>
        </ul>
      </div>
    </div>
  </section>
